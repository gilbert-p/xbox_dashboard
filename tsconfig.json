{
    "$schema": "https://json.schemastore.org/tsconfig",
    "_version": "2.0.0",
  
    "compilerOptions": {
      "lib": ["dom", "dom.iterable", "esnext"],
      "typeRoots": ["./custom_types", "node_modules/@types"],
      "module": "esnext",
      "moduleResolution": "bundler",
      "target": "es2015",
      "baseUrl": "./",
  
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "react-jsx",
      "noEmit": true,
      "noFallthroughCasesInSwitch": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "strict": true,
      "rootDir": "./src", 
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.js",
        "src/**/*.d.ts",
        "custom-types/index.d.ts",
        "node_modules/use-sound/dist/index.d.ts",
        "node_modules/use-sound/dist/types.d.ts",
        "node_modules/react-scripts/lib/react-app.d.ts",
      ],
  }
  